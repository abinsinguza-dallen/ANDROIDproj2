<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".graduationActivity">

    <TextView
        android:id="@+id/tvgraduation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:text="Choose Graduation Cake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imggrad1"
        android:layout_width="142dp"
        android:layout_height="121dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="105dp"
        app:layout_constraintEnd_toStartOf="@+id/tvgrad1"
        app:layout_constraintTop_toBottomOf="@+id/tvgraduation"
        app:srcCompat="@drawable/grad1" />

    <TextView
        android:id="@+id/tvgrad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="96dp"
        android:text="KSH 600/="
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgraduation" />

    <ImageView
        android:id="@+id/imggrad2"
        android:layout_width="134dp"
        android:layout_height="113dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imggrad1"
        app:srcCompat="@drawable/grad6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="68dp"
        android:text="KSH 2000/="
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgrad1" />

    <ImageView
        android:id="@+id/imggrad3"
        android:layout_width="121dp"
        android:layout_height="115dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="109dp"
        app:layout_constraintEnd_toStartOf="@+id/tvgrad3"
        app:layout_constraintTop_toBottomOf="@+id/imggrad2"
        app:srcCompat="@drawable/grd6" />

    <TextView
        android:id="@+id/tvgrad3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="72dp"
        android:text="KSH 750/="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imggrad4"
        android:layout_width="128dp"
        android:layout_height="156dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintEnd_toStartOf="@+id/tvgrad4"
        app:layout_constraintTop_toBottomOf="@+id/imggrad3"
        app:srcCompat="@drawable/grad4" />

    <TextView
        android:id="@+id/tvgrad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="71dp"
        android:text="KSH 5780/="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgrad3" />

    <Button
        android:id="@+id/btngradoders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:text="Made Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgrad4" />
</androidx.constraintlayout.widget.ConstraintLayout>